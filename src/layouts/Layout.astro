---
interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: "website" | "article";
	structuredData?: any; // Allow passing page-specific JSON-LD
}

const {
	title,
	description = "株式会社360Inc.のコーポレートサイトです。最新のテクノロジーを活用したソリューションを提供します。",
	image = "/og-image.jpg", // Create this image later or use a placeholder
	type = "website",
	structuredData,
} = Astro.props;

import "../styles/index.css";
import CookieBanner from "../components/CookieBanner.astro";

const siteUrl = Astro.site ? Astro.site.href : "https://example.com";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const socialImageURL = new URL(image, siteUrl);

// Organization Schema (JSON-LD) for AIO/MEO
const organizationSchema = {
	"@context": "https://schema.org",
	"@type": "Organization",
	name: "360Inc.",
	url: siteUrl,
	logo: new URL("/logo.png", siteUrl).href,
	description:
		"奈良・東京を拠点に、世界へ展開するクリエイティブエージェンシー。Web制作、アプリ開発、AI導入支援、XR開発。",
	address: {
		"@type": "PostalAddress",
		addressLocality: "Nara",
		addressRegion: "Nara",
		addressCountry: "JP",
	},
	contactPoint: {
		"@type": "ContactPoint",
		telephone: "+81-742-xx-xxxx",
		contactType: "customer service",
		areaServed: ["JP", "US", "Global"],
		availableLanguage: ["Japanese", "English"],
	},
	sameAs: [
		"https://twitter.com/360inc_official",
		"https://facebook.com/360inc_official",
	],
};

const websiteSchema = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	url: siteUrl,
	name: "360Inc. Corporate Site",
	potentialAction: {
		"@type": "SearchAction",
		target: `${siteUrl}?q={search_term_string}`,
		"query-input": "required name=search_term_string",
	},
};

// Breadcrumb List
const breadcrumbSchema = {
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	itemListElement: [
		{
			"@type": "ListItem",
			position: 1,
			name: "Home",
			item: siteUrl,
		},
		// Dynamically add current page if not home
		...(Astro.url.pathname !== "/"
			? [
					{
						"@type": "ListItem",
						position: 2,
						name: title,
						item: canonicalURL.href,
					},
				]
			: []),
	],
};

const finalJsonLd = [
	organizationSchema,
	websiteSchema,
	breadcrumbSchema,
	...(structuredData
		? Array.isArray(structuredData)
			? structuredData
			: [structuredData]
		: []),
];
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={canonicalURL} />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={socialImageURL} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={socialImageURL} />

		<!-- Structured Data -->
		{
			finalJsonLd.map((schema) => (
				<script
					type="application/ld+json"
					set:html={JSON.stringify(schema)}
				/>
			))
		}

		<title>{title}</title>

		<!-- Preload vital fonts if necessary -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	</head>
	<body class="text-white bg-black">
		<slot />
		<CookieBanner />
	</body>
</html>

<style is:global>
	html {
		color: #ffffff;
	}
</style>
