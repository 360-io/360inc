---
interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: "website" | "article";
	structuredData?: any; // Allow passing page-specific JSON-LD
}

const { title, description, image, type, structuredData } = Astro.props;

import "../styles/index.css";
import CookieBanner from "../components/CookieBanner.astro";
import BaseHead from "../components/BaseHead.astro";

const siteUrl = Astro.site ? Astro.site.href : "https://360inc.co.jp";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);

// Organization Schema (JSON-LD) for AIO/MEO
const organizationSchema = {
	"@context": "https://schema.org",
	"@type": "Organization",
	name: "360Inc.",
	url: siteUrl,
	logo: new URL("/logo.png", siteUrl).href,
	description:
		"奈良・東京を拠点に、世界へ展開するクリエイティブエージェンシー。Web制作、アプリ開発、AI導入支援、XR開発。",
	address: {
		"@type": "PostalAddress",
		addressLocality: "Nara",
		addressRegion: "Nara",
		addressCountry: "JP",
	},
	contactPoint: {
		"@type": "ContactPoint",
		telephone: "+81-742-xx-xxxx",
		contactType: "customer service",
		areaServed: ["JP", "US", "Global"],
		availableLanguage: ["Japanese", "English"],
	},
	sameAs: [
		"https://twitter.com/360inc_official",
		"https://facebook.com/360inc_official",
	],
};

const websiteSchema = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	url: siteUrl,
	name: "360Inc. Corporate Site",
	potentialAction: {
		"@type": "SearchAction",
		target: `${siteUrl}?q={search_term_string}`,
		"query-input": "required name=search_term_string",
	},
};

// Breadcrumb List
const breadcrumbSchema = {
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	itemListElement: [
		{
			"@type": "ListItem",
			position: 1,
			name: "Home",
			item: siteUrl,
		},
		// Dynamically add current page if not home
		...(Astro.url.pathname !== "/"
			? [
					{
						"@type": "ListItem",
						position: 2,
						name: title,
						item: canonicalURL.href,
					},
				]
			: []),
	],
};

const finalJsonLd = [
	organizationSchema,
	websiteSchema,
	breadcrumbSchema,
	...(structuredData
		? Array.isArray(structuredData)
			? structuredData
			: [structuredData]
		: []),
];
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead
			title={title}
			description={description}
			image={image}
			type={type}
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Structured Data -->
		{
			finalJsonLd.map((schema) => (
				<script
					type="application/ld+json"
					set:html={JSON.stringify(schema)}
				/>
			))
		}
	</head>
	<body class="text-white bg-black">
		<slot />
		<CookieBanner />
	</body>
</html>

<style is:global>
	html {
		color: #ffffff;
	}
</style>
